FROM node:20-alpine

# Make directory
RUN mkdir -p /hardhat

# Copy files
COPY package.json /hardhat
COPY package-lock.json /hardhat
COPY hardhat.config.js /hardhat

WORKDIR /hardhat

# Install hardhat
RUN npm install --only=dev

# Run hardhat node
CMD ["npx", "hardhat", "--config", "./hardhat.config.js", "node"]